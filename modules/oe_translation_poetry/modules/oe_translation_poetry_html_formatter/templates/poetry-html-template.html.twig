<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="EntityId" content="{{ entity_id }}" />
    <meta name="languageSource" content="{{ source_language }}" />
    <meta name="languageTarget" content="{{ target_language  }}" />
    <title>Entity Id {{ entity_id }}</title>
  </head>
  <body>
    {% for item_key, item in items %}
      <div class="asset" id="item-{{ item_key }}">
        {% for field_key, field in item %}
          <!--
          label="{{ field['#parent_label']|first }}"
          context="{{ field['#key'] }}"
          -->
          <div class="atom" id="{{ field_key }}">{{ field['#text'] }}</div>
        {% endfor %}
      </div>
    {% endfor %}
  </body>
</html>
